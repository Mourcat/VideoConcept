#: import Win kivy.core.window.Window


<TubeCard>
	orientation: 'vertical'
    size_hint: .3, .3
    pos_hint: {'center_x': .5, 'center_y': .5}
    padding: [dp(20), dp(50), dp(20), dp(50)]
    spacing: dp(35)
    radius: [dp(25),]
    
    MDLabel:
        text: root.tube_label
        halign: 'center'
        font_style: 'H4'
        size_hint_y: None
        height: self.texture_size[1]
            
    Image:
        source: root.img
            
    MDLabel:
        id: info_lbl
        text: f'Please, paste {root.tube_label} url?!'
        theme_text_color: 'Custom'
		text_color: app.theme_cls.primary_light
        halign: 'center'
        font_style: 'Button'
        size_hint_y: None
        height: self.texture_size[1]
        
    TextInput:
        id: yt_url
        background_color: .3, .3, .3, .3
        foreground_color: app.theme_cls.accent_light
        size_hint: 1, None
        height: self.minimum_height+dp(10)
        pos_hint: {'center_y': .5}
        on_text:
            start_btn.disabled = False
        
    MDBoxLayout:
        id: controls
        adaptive_height: True
        opacity: .3



        MDIconButton:
            icon: 'clipboard'
            pos_hint: {'center_x': .5, 'center_y': .5}
            theme_text_color: 'Custom'
			text_color: app.theme_cls.primary_light
            on_release:
                yt_url.text=Clipboard.paste()
                    
        MDIconButton:
            icon: 'close'
            pos_hint: {'center_x': .5, 'center_y': .5}
            theme_text_color: 'Custom'
			text_color: app.theme_cls.primary_light
            on_release:
                yt_url.text=''
    
    MDRaisedButton:
        id: start_btn
        text: 'START'
        disabled: True
        pos_hint: {'center_x': .5}
        on_press:
            info_lbl.text = 'Please, wait...'
            self.disabled = True
        on_release:
            root.yt_url = yt_url.text
            root.download_it(root.yt_url)